{
    "name": "burned42/npradio",
    "description": "Now Playing Radio",
    "type": "project",
    "license": "",
    "require": {
        "php": "^7.0.8",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "sensio/framework-extra-bundle": "^5.2",
        "symfony/apache-pack": "^1.0",
        "symfony/console": "^3.4",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^3.4",
        "symfony/twig-bundle": "^3.4",
        "symfony/yaml": "^3.4",
        "twbs/bootstrap": "^4.1.1"
    },
    "require-dev": {
        "codeception/codeception": "^2.2",
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpstan/phpstan": "^0.9.2",
        "squizlabs/php_codesniffer": "^3.3",
        "symfony/dotenv": "^3.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "platform": {
            "php": "7.0.30"
        },
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "copy-bootstrap": "cp vendor/twbs/bootstrap/dist/css/bootstrap.min.css* public/css/",
        "post-install-cmd": [
            "@auto-scripts",
            "@copy-bootstrap"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "@copy-bootstrap"
        ],
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --dry-run --using-cache=no --ansi --allow-risky=yes --diff",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan analyse --level max --ansi src",
        "codeception": "vendor/bin/codecept run --ansi",
        "codeception-coverage-xml": "vendor/bin/codecept run --ansi --coverage --coverage-xml",
        "codeception-coverage-html": "vendor/bin/codecept run --ansi --coverage --coverage-html",
        "update-check": "composer outdated --direct --strict --ansi"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
